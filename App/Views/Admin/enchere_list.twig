{% extends "base2.twig" %}
{% block title %}Encheres{% endblock %}
{% block description %}{% endblock %}
{% block keywords %}{% endblock %}
{% block body %}
    <div class="main-panel">
        <div class="content" style="margin-top: 0px;">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary flex-title">
                                <h4 class="card-title">Encheres</h4>
                                <a href="/admin/enchere/new"><i class="fas fa-plus"></i></a>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class=" text-primary">
                                        <tr>
                                            <th>
                                                ID
                                            </th>
                                            <th>
                                                Lot
                                            </th>
                                            <th>
                                                Date debut
                                            </th>
                                            <th>
                                                Date fin
                                            </th>
                                            <th>
                                                Prix
                                            </th>
                                            <th>
                                                Pas
                                            </th>
                                            <th>
                                                Etat
                                            </th>
                                            <th>
                                                Actions
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for row in encheres %}
                                            <tr>
                                                <td>
                                                    {{ row.getId }}
                                                </td>
                                                <td>
                                                    <a href="/admin/lot/edit?id={{ row.getId }}" rel="tooltip" title="" class="btn btn-primary btn-link btn-sm" data-original-title="Editer">
                                                        {{ row.getLot.getNom }} <i class="material-icons">edit</i>
                                                        <div class="ripple-container"></div></a>
                                                </td>
                                                <td>
                                                    {{ row.getDatedebut|date("d/m/Y H:i:s") }}
                                                </td>
                                                <td>
                                                    {{ row.getDatefin|date("d/m/Y H:i:s") }}
                                                </td>
                                                <td class="text-primary">
                                                    {{ row.getPrice }} â‚¬
                                                </td>
                                                <td>
                                                    {{ row.getPas }}
                                                </td>
                                                <td>
                                                    {{ row.getEtat }}
                                                </td>
                                                <td class="td-actions text-right">
                                                    {% if(row.getEtat==0) %}
                                                        <a href="/admin/enchere/active?id={{ row.getId }}" rel="tooltip" title="" class="btn btn-primary btn-link btn-sm" data-original-title="Montrer"><i class="material-icons">visibility</i>
                                                            <div class="ripple-container"></div></a>
                                                    {% else %}
                                                        <a href="/admin/enchere/unactive?id={{ row.getId }}" rel="tooltip" title="" class="btn btn-primary btn-link btn-sm" data-original-title="Cacher">
                                                            <i class="material-icons">visibility_off</i>
                                                            <div class="ripple-container"></div></a>
                                                    {% endif %}
                                                    <a href="/admin/enchere/edit?id={{ row.getId }}" rel="tooltip" title="" class="btn btn-primary btn-link btn-sm" data-original-title="Editer">
                                                        <i class="material-icons">edit</i>
                                                        <div class="ripple-container"></div></a>
                                                    <a href="/admin/enchere/remove?id={{ row.getId }}" rel="tooltip" title="" class="btn btn-danger btn-link btn-sm" data-original-title="Supprimer">
                                                        <i class="material-icons">close</i>
                                                    </a>
                                                </td>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.querySelector("#encherelink").className+="active";
    </script>
{% endblock %}