{% extends "base2.twig" %}
{% block title %}Produits{% endblock %}
{% block description %}{% endblock %}
{% block keywords %}{% endblock %}
{% block body %}
    <div class="main-panel">
        <div class="content" style="margin-top: 0px;">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary flex-title">
                                <h4 class="card-title ">Produits</h4>
                                <a href="/admin/produit/new"><i class="fas fa-plus"></i></a>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class=" text-primary">
                                        <tr>
                                            <th>
                                                ID
                                            </th>
                                            <th>
                                                Nom
                                            </th>
                                            <th>
                                                Fournisseur
                                            </th>
                                            <th>
                                                Prix d'achat
                                            </th>
                                            <th>
                                                Qte
                                            </th>
                                            <th>
                                                Code barre
                                            </th>
                                            <th>
                                                Actions
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for row in produits %}
                                        <tr>
                                            <td>
                                                {{ row.getId }}
                                            </td>
                                            <td class="text-primary">
                                                {{ row.getNom }}
                                            </td>
                                            <td>
                                                {{ row.getFournisseur }}
                                            </td>
                                            <td>
                                                {{ row.getDateachat|date('d/m/Y H:i:s') }}
                                            </td>
                                            <td>
                                                {{ row.getQuantite }}
                                            </td>
                                            <td>
                                                {{ row.getCodeBar }}
                                            </td>
                                            <td>
                                                <a href="/admin/produit/edit?id={{ row.getId }}" rel="tooltip" title="" class="btn btn-primary btn-link btn-sm" data-original-title="Editer">
                                                    <i class="material-icons">edit</i>
                                                    <div class="ripple-container"></div></a>
                                                <a href="/admin/produit/remove?id={{ row.getId }}" rel="tooltip" title="" class="btn btn-danger btn-link btn-sm" data-original-title="Supprimer">
                                                    <i class="material-icons">close</i>
                                                </a>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.querySelector("#productlink").className+="active";
    </script>
{% endblock %}